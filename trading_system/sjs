    def process_sell_for_symbol(self, symbol: str, position: dict):
        """ê°œì„ ëœ ë§¤ë„ ì²˜ë¦¬ - ì¶”ì„¸ë¥¼ ê³ ë ¤í•œ ì†ì ˆ/ìµì ˆ"""
        try:
            if symbol not in self.all_positions:
                return
                
            quantity = position['quantity']
            profit_loss_pct = position['profit_loss']
            profit_loss_decimal = profit_loss_pct / 100
            stock_name = self.get_stock_name(symbol)
            current_price = position['current_price']
            
            # ğŸ†• ì¼ë´‰ ì¶”ì„¸ ë¶„ì„ ë¨¼ì € ìˆ˜í–‰ (ëª¨ë“  íŒë‹¨ì˜ ê¸°ì¤€)
            daily_analysis = self.hybrid_strategy.analyze_daily_strategy(symbol)
            
            # ğŸ”¥ 1ìˆœìœ„: ê·¹ë‹¨ì  ì†ì‹¤ (-10% ì´ìƒ) - ë¬´ì¡°ê±´ ì†ì ˆ (ê¸°ì¤€ ê°•í™”)
            if profit_loss_decimal <= -0.10:
                self.logger.warning(f"ğŸ›‘ {stock_name}({symbol}) ê·¹í•œ ì†ì ˆ! ({profit_loss_pct:+.2f}%)")
                self.execute_sell(symbol, quantity, "urgent", "ê·¹í•œì†ì ˆ")
                return
            
            # ğŸ”¥ 2ìˆœìœ„: ì¤‘ê°„ ì†ì‹¤ (-7% ~ -10%) - ì¶”ì„¸ í™•ì¸ í›„ ê²°ì •
            if -0.10 < profit_loss_decimal <= -0.07:
                # ê°•í•œ ë§¤ìˆ˜ ì‹ í˜¸ë©´ ë³´ìœ 
                if daily_analysis['signal'] == 'BUY' and daily_analysis['strength'] >= 4.0:
                    self.logger.warning(f"âš ï¸ {stock_name}({symbol}) ì†ì‹¤ì´ì§€ë§Œ ê°•í•œ ìƒìŠ¹ì‹ í˜¸ë¡œ ë³´ìœ : "
                                       f"{profit_loss_pct:+.2f}%, ì‹ í˜¸ {daily_analysis['strength']:.1f}ì ")
                    return
                else:
                    # ì¶”ì„¸ ì•½í•˜ë©´ ì†ì ˆ
                    self.logger.warning(f"ğŸ›‘ {stock_name}({symbol}) ì¶”ì„¸ ì•½í™”ë¡œ ì†ì ˆ! ({profit_loss_pct:+.2f}%)")
                    self.execute_sell(symbol, quantity, "urgent", "ì¶”ì„¸ì†ì ˆ")
                    return
            
            # ğŸ”¥ 3ìˆœìœ„: ë‹¨ê³„ì  ìµì ˆ (ì¶”ì„¸ ê³ ë ¤)
            if profit_loss_decimal >= 0.20:  # 20% ì´ìƒ â†’ ë¬´ì¡°ê±´ ì¼ë¶€ ìµì ˆ
                # ì „ì²´ ìˆ˜ëŸ‰ì˜ 50% ìµì ˆ
                partial_quantity = max(1, quantity // 2)
                self.logger.info(f"ğŸ¯ {stock_name}({symbol}) 1ì°¨ ë¶€ë¶„ìµì ˆ! "
                               f"{partial_quantity}/{quantity}ì£¼ ({profit_loss_pct:+.2f}%)")
                self.execute_sell(symbol, partial_quantity, "aggressive_limit", "1ì°¨ë¶€ë¶„ìµì ˆ")
                return
                
            elif profit_loss_decimal >= 0.15:  # 15~20% â†’ ì¶”ì„¸ í™•ì¸
                # ë§¤ë„ ì‹ í˜¸ê°€ ê°•í•˜ë©´ ì „ëŸ‰ ìµì ˆ
                if daily_analysis['signal'] == 'SELL' and daily_analysis['strength'] >= 3.0:
                    self.logger.info(f"ğŸ¯ {stock_name}({symbol}) ì¶”ì„¸ì „í™˜ ì „ëŸ‰ìµì ˆ! ({profit_loss_pct:+.2f}%)")
                    self.execute_sell(symbol, quantity, "aggressive_limit", "ì¶”ì„¸ìµì ˆ")
                    return
                # ìƒìŠ¹ ì¶”ì„¸ë©´ ë³´ìœ 
                elif daily_analysis['signal'] == 'BUY' and daily_analysis['strength'] >= 3.0:
                    self.logger.info(f"ğŸ“ˆ {stock_name}({symbol}) ìƒìŠ¹ ì§€ì†ìœ¼ë¡œ ë³´ìœ : "
                                   f"{profit_loss_pct:+.2f}%, ì‹ í˜¸ {daily_analysis['strength']:.1f}ì ")
                    return
                # ì¤‘ë¦½ì´ë©´ ìµì ˆ
                else:
                    self.logger.info(f"ğŸ¯ {stock_name}({symbol}) ê¸°ìˆ ì  ìµì ˆ! ({profit_loss_pct:+.2f}%)")
                    self.execute_sell(symbol, quantity, "aggressive_limit", "ê¸°ìˆ ì ìµì ˆ")
                    return
                    
            elif profit_loss_decimal >= 0.10:  # 10~15% â†’ ë§¤ë„ ì‹ í˜¸ì‹œë§Œ ìµì ˆ
                if daily_analysis['signal'] == 'SELL' and daily_analysis['strength'] >= 2.5:
                    self.logger.info(f"ğŸ¯ {stock_name}({symbol}) ì¡°ê¸°ìµì ˆ! ({profit_loss_pct:+.2f}%)")
                    self.execute_sell(symbol, quantity, "aggressive_limit", "ì¡°ê¸°ìµì ˆ")
                    return
